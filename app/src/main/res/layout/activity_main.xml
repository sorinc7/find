<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sorindev.find.MainActivity"
    android:background="#e9ebee"
    tools:background="#e9ebee">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_gravity="top"
        android:layout_centerHorizontal="true"
        android:src="@drawable/susus"
        />

    <TextView
        android:id="@+id/myImageViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignRight="@+id/imageView6"
        android:layout_alignTop="@+id/imageView6"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="Ce căutăm azi?"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <ScrollView
        android:layout_below="@id/imageView6"
        android:layout_above="@id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/pizzaImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:padding="7dp"
                android:src="@drawable/pizza" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/liniedespartitoare"
                android:paddingLeft="28px"
                android:paddingRight="28px"/>

            <ImageView
                android:id="@+id/restaurantImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="7dp"
                android:src="@drawable/restaurante" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/liniedespartitoare"
                android:paddingLeft="28px"
                android:paddingRight="28px"/>
            <ImageView
                android:id="@+id/fastfoodImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="7dp"
                android:src="@drawable/fastfood" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/liniedespartitoare"
                android:paddingLeft="28px"
                android:paddingRight="28px"/>
            <ImageView
                android:id="@+id/baruriImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="7dp"
                android:src="@drawable/bar" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/liniedespartitoare"
                android:paddingLeft="28px"
                android:paddingRight="28px"/>
            <ImageView
                android:id="@+id/pubImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="7dp"
                android:src="@drawable/pub" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/liniedespartitoare"
                android:paddingLeft="28px"
                android:paddingRight="28px"/>
            <ImageView
                android:id="@+id/clubImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="7dp"
                android:src="@drawable/cluburi" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/liniedespartitoare"
                android:paddingLeft="28px"
                android:paddingRight="28px"/>

            <ImageView
                android:id="@+id/spaImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="7dp"
                android:src="@drawable/spa" />
        </LinearLayout>
    </ScrollView>






    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_centerHorizontal="true"
        android:scaleX="-1"
        android:src="@drawable/jos" />




</RelativeLayout>
