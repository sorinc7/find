<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sorindev.find.MainActivity"
    android:background="#e9ebee"
    tools:background="#e9ebee">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_gravity="top"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/susus"
        />
    <TextView
        android:id="@+id/myImageViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView6"
        android:layout_alignTop="@+id/imageView6"
        android:layout_alignEnd="@+id/imageView6"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="Fast Food"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:layout_alignRight="@+id/imageView6"
        android:layout_alignLeft="@+id/imageView6" />
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView6"
        android:id="@+id/relativ"
        android:background="@mipmap/cadran"

        >
        <TextView
            android:id="@+id/textpers"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/numar_persoane"
            android:textColor="#303F9F"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"/>
        <TextView
            android:id="@+id/count"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_toRightOf="@id/textpers"
            android:textSize="20dp"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:paddingEnd="15dp"
            android:gravity="right"
            android:textColor="#000000"/>
        <SeekBar
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textpers"
            android:layout_margin="10dp"
            android:fadingEdge="horizontal|vertical"
            android:isScrollContainer="false"
            android:max="20"
            android:maxHeight="5sp"
            android:progress="1"
            android:progressDrawable="@mipmap/seekbar_progressbar"
            android:thumbTintMode="multiply"
            android:thumb="@mipmap/thumb_image"/>


    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:adjustViewBounds="true"
        android:scaleY="-1"
        android:src="@mipmap/susus"
        />

    <ImageView
        android:id="@+id/lupa"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:gravity="right"
        android:paddingBottom="3dp"
        android:src="@mipmap/search"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/myImageViewText"
        android:layout_alignEnd="@+id/myImageViewText" />
    <RelativeLayout
        android:layout_marginTop="17dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:background="@mipmap/cadran"
        android:layout_below="@id/relativ"
        android:id="@+id/relativ2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preferinţe"
            android:id="@+id/prim"
            android:textColor="#303F9F"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:textSize="20dp"
            />
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/vegetarian"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:maxHeight="5dp"
            android:layout_below="@id/prim"
            android:paddingLeft="15dp"
            android:text="Meniu vegetarian"
            android:textColor="#000000"
            android:textSize="20dp"
            android:thumb="@mipmap/thumb_image"
            android:trackTint="#000000"
            android:trackTintMode="multiply"
            android:theme="@style/SCBSwitch"
            />
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/racoritoare"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/vegetarian"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:maxHeight="5dp"
            android:paddingLeft="15dp"
            android:text="Băuturi răcoritoare"
            android:textColor="#000000"
            android:textSize="20dp"
            android:thumb="@mipmap/thumb_image"
            android:trackTint="#000000"
            android:trackTintMode="multiply"
            android:theme="@style/SCBSwitch"
            />
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/cafea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/racoritoare"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:maxHeight="5dp"
            android:paddingLeft="15dp"
            android:text="Cafea"
            android:textColor="#000000"
            android:textSize="20dp"
            android:thumb="@mipmap/thumb_image"
            android:trackTint="#000000"
            android:trackTintMode="multiply"
            android:theme="@style/SCBSwitch"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="17dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:background="@mipmap/cadran"
        android:layout_below="@id/relativ2"
        android:id="@+id/relativ3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/servireMasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#303F9F"
            android:textStyle="bold"
            android:maxHeight="5dp"
            android:paddingLeft="15dp"
            android:text="Loc de servit masa"
            android:textSize="20dp"
            android:thumb="@mipmap/thumb_image"
            android:trackTint="#000000"
            android:trackTintMode="multiply"
            android:theme="@style/SCBSwitch"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
</RelativeLayout>

